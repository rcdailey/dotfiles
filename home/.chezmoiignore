{{ if ne .env "personal" }}
.ssh/config.d/personal.ssh
{{ end }}

# Run the appropriate scripts based on OS
{{ if eq .chezmoi.os "windows" }}
.chezmoiscripts/*.sh
{{ else }}
.chezmoiscripts/*.ps1
{{ end }}

