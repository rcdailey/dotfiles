{
  "includeCoAuthoredBy": false,
  "cleanupPeriodDays": 7,
  "model": "sonnet",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(brew info:*)",
      "Bash(brew search:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(diff:*)",
      "Bash(du:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git reflog:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(pip:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(python *.py:*)",
      "Bash(python3 -m black:*)",
      "Bash(python3 *.py:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(sqlite3:*)",
      "Bash(tail:*)",
      "Bash(tar:*)",
      "Bash(time:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(uniq:*)",
      "Bash(unzip:*)",
      "Bash(wc:*)",
      "Bash(wget:*)",
      "Bash(which:*)",
      "Bash(xmlstarlet:*)",
      "Bash(yamllint:*)",
      "Bash(zip:*)",
      "WebFetch"
    ],
    "deny": ["Bash(find:*-type*)"]
  }
}
