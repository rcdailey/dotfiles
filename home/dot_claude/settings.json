{
  "includeCoAuthoredBy": false,
  "cleanupPeriodDays": 7,
  "model": "sonnet",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "300000"
  },
  "permissions": {
    "deny": ["WebSearch", "WebFetch"],
    "allow": [
      "Bash(arp:*)",
      "Bash(awk:*)",
      "Bash(brew info:*)",
      "Bash(brew search:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(diff:*)",
      "Bash(dig:*)",
      "Bash(du:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git reflog:*)",
      "Bash(git rev-parse:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ip route:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(nmap:*)",
      "Bash(npm:*)",
      "Bash(nslookup:*)",
      "Bash(ping:*)",
      "Bash(pip:*)",
      "Bash(pre-commit run:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(python *.py:*)",
      "Bash(python:*)",
      "Bash(python3 -m black:*)",
      "Bash(python3 *.py:*)",
      "Bash(python3:*)",
      "Bash(rg:*)",
      "Bash(rm)",
      "Bash(rmdir:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(source:*)",
      "Bash(sqlite3:*)",
      "Bash(tail:*)",
      "Bash(tar:*)",
      "Bash(test:*)",
      "Bash(time:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(true)",
      "Bash(uniq:*)",
      "Bash(unzip:*)",
      "Bash(wc:*)",
      "Bash(wget:*)",
      "Bash(which:*)",
      "Bash(xmlstarlet:*)",
      "Bash(yamllint:*)",
      "Bash(zip:*)",
      "mcp__github__get_file_contents",
      "mcp__github__get_issue_comments",
      "mcp__github__get_issue",
      "mcp__github__list_discussions",
      "mcp__github__search_code",
      "mcp__github__search_issues",
      "mcp__github__search_repositories",
      "mcp__tavily__tavily-extract",
      "mcp__tavily__tavily-search"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "zsh ~/.claude/statusline-git.sh"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tool-redirections.py"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/webfetch-github-redirect.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/context-injector.py"
          }
        ]
      }
    ]
  }
}
