{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "plugin": ["@plannotator/opencode@latest"],
  "share": "manual",
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "grep *": "deny",
      "git push *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "octocode": {
      "type": "local",
      "command": ["npx", "-y", "octocode-mcp@latest"]
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
