{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "keybinds": {
    "messages_previous": "alt+up",
    "messages_next": "alt+down",
    "session_timeline": "alt+z",
    "session_child_cycle": "alt+right",
    "session_child_cycle_reverse": "alt+left",
    "session_fork": "alt+f",
    "input_visual_line_home": "home",
    "input_visual_line_end": "end",
    "model_list": "alt+m",

    // these conflict with home/end keys above
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "input_buffer_home": "none",
    "input_buffer_end": "none"
  },
  "plugin": [
    "@plannotator/opencode@latest",
    "opencode-anthropic-auth@latest",
    // "oh-my-opencode@latest",
  ],
  "share": "manual",
  "formatter": {
    "shfmt": { "disabled": true }
  },
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "grep *": "deny",
      "git push *": "ask",
      // "git commit *": "ask",
      // "git add *": "ask",

      // gh pr
      "gh pr create *": "ask",
      "gh pr merge *": "ask",
      "gh pr close *": "ask",
      "gh pr reopen *": "ask",
      "gh pr comment *": "ask",
      "gh pr edit *": "ask",
      "gh pr review *": "ask",
      "gh pr ready *": "ask",

      // gh issue
      "gh issue create *": "ask",
      "gh issue close *": "ask",
      "gh issue reopen *": "ask",
      "gh issue delete *": "ask",
      "gh issue edit *": "ask",
      "gh issue comment *": "ask",
      "gh issue transfer *": "ask",

      // gh release
      "gh release create *": "ask",
      "gh release delete *": "ask",
      "gh release edit *": "ask",
      "gh release upload *": "ask",

      // gh repo
      "gh repo create *": "ask",
      "gh repo delete *": "ask",
      "gh repo fork *": "ask",
      "gh repo archive *": "ask",
      "gh repo rename *": "ask",
      "gh repo edit *": "ask",

      // gh workflow/run
      "gh workflow run *": "ask",
      "gh run cancel *": "ask",
      "gh run rerun *": "ask",

      // gh label/secret/variable
      "gh label create *": "ask",
      "gh label delete *": "ask",
      "gh secret set *": "ask",
      "gh secret delete *": "ask",
      "gh variable set *": "ask",
      "gh variable delete *": "ask",

      // gh api (write methods)
      "gh api * --method POST *": "ask",
      "gh api * --method PUT *": "ask",
      "gh api * --method PATCH *": "ask",
      "gh api * --method DELETE *": "ask",
      "gh api * -X POST *": "ask",
      "gh api * -X PUT *": "ask",
      "gh api * -X PATCH *": "ask",
      "gh api * -X DELETE *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "octocode": {
      "type": "local",
      "command": ["npx", "-y", "octocode-mcp@latest"]
    }
  }
}
