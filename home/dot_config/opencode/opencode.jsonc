{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "keybinds": {
    "messages_previous": "alt+up",
    "messages_next": "alt+down",
    "session_timeline": "alt+z",
    "session_child_cycle": "alt+right",
    "session_child_cycle_reverse": "alt+left",
    "session_fork": "alt+f",
    "input_visual_line_home": "home",
    "input_visual_line_end": "end",

    // these conflict with home/end keys above
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "input_buffer_home": "none",
    "input_buffer_end": "none",
  },
  "plugin": ["@plannotator/opencode@latest"],
  "share": "manual",
  "formatter": {
    "shfmt": { "disabled": true }
  },
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "grep *": "deny",
      "git push *": "ask",
      "git commit *": "ask",
      "git add *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "octocode": {
      "type": "local",
      "command": ["npx", "-y", "octocode-mcp@latest"]
    }
  }
}
