{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "keybinds": {
    "messages_previous": "alt+up",
    "messages_next": "alt+down",
    "session_timeline": "alt+z",
    "session_child_cycle": "alt+right",
    "session_child_cycle_reverse": "alt+left"
  },
  "plugin": ["@plannotator/opencode@latest"],
  "share": "manual",
  "formatter": {
    "shfmt": { "disabled": true }
  },
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "grep *": "deny",
      "git push *": "ask",
      "git commit *": "ask",
      "git add *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "octocode": {
      "type": "local",
      "command": ["npx", "-y", "octocode-mcp@latest"]
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  }
}
